kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: {{ KUMA_NAME }}
spec:
  replicas: {{ KUMA_REPLICAS }}
  template:
    metadata:
      labels:
        app: {{ KUMA_NAME }}
    spec:
      volumes:
        - name: kuma-fs
          persistentVolumeClaim:
            claimName: {{ SHARED_PVC_NAME }}
      containers:
        - name: {{ KUMA_NAME }}
          image: {{ KUMA_IMAGE }}:{{ KUMA_IMAGE_TAG }}
          imagePullPolicy: {{ KUMA_IMAGE_PULL_POLICY }}
          volumeMounts:
            - name: kuma-fs
              mountPath: {{ KUMA_MOUNT_PATH }}
          resources:
            requests:
              cpu: {{ KUMA_CPU_REQUEST }}
              memory: {{ KUMA_MEMORY_REQUEST }}
            limits:
              cpu: {{ KUMA_CPU_LIMIT }}
              memory: {{ KUMA_MEMORY_LIMIT }}
          env:
            # Django settings overrides:
            - name: ACCOUNT_DEFAULT_HTTP_PROTOCOL
              value: {{ KUMA_ACCOUNT_DEFAULT_HTTP_PROTOCOL }}
            - name: ALLOWED_HOSTS
              value: "{{ KUMA_ALLOWED_HOSTS }}"
            - name: ATTACHMENT_HOST
              value: {{ KUMA_ATTACHMENT_HOST }}
            - name: BROKER_URL
              valueFrom:
                secretKeyRef:
                  name: mdn-secrets
                  key: redis-url
            - name: CELERY_ALWAYS_EAGER
              value: "False"
            - name: CSRF_COOKIE_SECURE
              value: "{{ KUMA_CSRF_COOKIE_SECURE }}"
            - name: DATABASE_URL
              valueFrom:
                secretKeyRef:
                  name: mdn-secrets
                  key: database-url
            - name: DEBUG
              value: "{{ KUMA_DEBUG }}"
            - name: DEBUG_TOOLBAR
              value: "{{ KUMA_DEBUG_TOOLBAR }}"
            - name: DOMAIN
              value: {{ KUMA_DOMAIN }}
            - name: ES_URLS
              valueFrom:
                secretKeyRef:
                  name: mdn-secrets
                  key: elasticsearch-url
            - name: KUMASCRIPT_URL_TEMPLATE
              value: {{ KUMA_URL_TEMPLATE_FOR_KUMASCRIPT }}
            - name: LEGACY_ROOT
              value: "{{ KUMA_LEGACY_ROOT }}"
            - name: MEDIA_ROOT
              value: {{ KUMA_MEDIA_ROOT }}
            - name: MEMCACHE_SERVERS
              valueFrom:
                secretKeyRef:
                  name: mdn-secrets
                  key: memcached-url
            - name: PROD_DETAILS_DIR
              value: /app/product_details_json
            - name: PROTOCOL
              value: {{ KUMA_PROTOCOL }}
            - name: SERVE_LEGACY
              value: "{{ KUMA_SERVE_LEGACY }}"
            - name: SESSION_COOKIE_SECURE
              value: "{{ KUMA_SESSION_COOKIE_SECURE }}"
            - name: SITE_URL
              value: {{ KUMA_SITE_URL }}
            # Other environment overrides
            - name: PYTHONDONTWRITEBYTECODE
              value: "1"
            - name: PYTHONUNBUFFERED
              value: "True"
            - name: WEB_CONCURRENCY
              value: "{{ KUMA_WEB_CONCURRENCY }}"
            - name: MAINTENANCE_MODE
              value: "{{ KUMA_MAINTENANCE_MODE }}"
